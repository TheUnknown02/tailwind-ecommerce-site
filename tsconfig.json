{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./public/js",
    "rootDir": "./scripts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["scripts/**/*"]
}
